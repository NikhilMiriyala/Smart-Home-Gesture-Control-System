<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeActivity">

    <TextView
        android:id="@+id/gesturePracticeTextView"
        android:layout_width="383dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-black"
        android:text="GestureName"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/gestureVideoView"
        android:layout_width="378dp"
        android:layout_height="503dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gesturePracticeTextView" />

    <Button
        android:id="@+id/practiceBtn"
        android:layout_width="201dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:text="Practice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gestureVideoView"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/replayBtn"
        android:layout_width="116dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:text="Replay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gestureVideoView"
        app:layout_constraintVertical_bias="0.553" />
</androidx.constraintlayout.widget.ConstraintLayout>